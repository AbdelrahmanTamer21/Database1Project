
@{
    ViewBag.Title = "ChooseInstructorForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Choose Instructor Form</h2>


@using (Html.BeginForm("ChooseInstructor", "Student", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Student</h4>
    <hr />
    <div class="form-group">
        <label class="control-label col-md-2">Student ID</label>
        <div class="col-md-10">
            <input type="number" class="form-control" name="student_id" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Course ID</label>
        <div class="col-md-10">
            <input type="number" class="form-control" name="course_id" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Instructor ID</label>
        <div class="col-md-10">
            <input type="text" class="form-control" name="instructor_id" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Current Semester Code</label>
        <div class="col-md-10">
            <input type="text" class="form-control" name="current_semester_code" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


