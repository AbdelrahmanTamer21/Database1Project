
@{
    ViewBag.Title = "linkStudentInstructor";
}

<h2>linkStudentInstructor</h2>

@using (Html.BeginForm("student_course_instructor", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Student</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group mt-2">
            <label class="control-label col-md-2">Students</label>
            <div class="col-md-10">
                @Html.DropDownList("studentID", ViewBag.Students as SelectList, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group mt-2">
            <label class="control-label col-md-2">Course</label>
            <div class="col-md-10">
                @Html.DropDownList("course_id", ViewBag.Courses as SelectList, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group mt-2">
            <label class="control-label col-md-2">Instructor</label>
            <div class="col-md-10">
                @Html.DropDownList("instructor_id", ViewBag.Instructors as SelectList, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group mt-2">
            <label class="control-label col-md-2">Semesters</label>
            <div class="col-md-10">
                @Html.DropDownList("semester_code", ViewBag.Semesters as SelectList, new { @class = "form-control" })
            </div>
        </div>


        <div class="form-group mt-2">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Link" class="btn btn-default btn-primary" />
            </div>
        </div>
    </div>
}
