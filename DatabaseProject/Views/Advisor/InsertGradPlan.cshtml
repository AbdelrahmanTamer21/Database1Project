@model DatabaseProject.Models.GraduationPlan

@{
    ViewBag.Title = "InsertGradPlan";
}

<h2>New Graduation Plan</h2>

@using (Html.BeginForm("insertGradPlanSql","Advisor", new { student_id = Request.QueryString["student_id"] }, FormMethod.Post, null))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal pt-3">
        <h4>GraduationPlan</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row mt-3">
            <div class="col-3">
                <label class="control-label" for="Semester_code">Semester code</label>
            </div>
            <div class="col-md-8">
                @Html.DropDownList("semester_code", ViewBag.Semesters as SelectList, new { @class = "form-select" })
            </div>
        </div>

        <div class="form-group row mt-3">
            <div class="col-3">
                <label class="control-label" for="expected_grad_date">Expected grad date</label>
            </div>
            <div class="col-md-8">
                @Html.EditorFor(model => model.expected_grad_date, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.expected_grad_date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row mt-3">
            <div class="col-3">
                <label class="control-label" for="sem_credit_hours">Semester credit hours</label>
            </div>
            <div class="col-md-8">
                <input class="form-control text-box single-line" id="sem_credit_hours" name="credit_hours" type="number" value="">
                <span class="field-validation-valid text-danger" data-valmsg-for="sem_credit_hours" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
